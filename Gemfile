source 'https://rubygems.org'

gem 'guard-java', '~>0.0.4'

# guard/listen will only pull the gem needed depending on the platform of these:
gem 'rb-inotify', :require => false   # Linux
gem 'rb-fsevent', :require => false   # OSX
gem 'wdm', :platforms => [:mswin, :mingw], :require => false  # Windows, Ruby >= 1.9.2
#gem 'rb-fchange', :require => false # for Windows with ruby < 1.9.2

gem 'win32console', :platforms => [:mswin, :mingw]  # colors in Windows terminal

gem 'ruby_gntp' # Growl notifications
